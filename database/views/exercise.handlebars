<h1>It's time to get fit</h1>
<form method="post">
  Name<input type="text" name="name" id="name">
  Reps<input type="number" name="reps" id="reps">
  Weight<input type="number" name="weight" id="weight">
  Date<input type="date" name="date" id="date">
  <input type="checkbox" name="lbs" id="lbs" value=1>lbs? 
  <input type="submit" name="Add Entry" value="Add Entry">
</form>
{{#if exercise}}
<table id="dataTable">
	<thead>
		<tr>
			<td>Name</td>
			<td>Reps</td>
			<td>Weight</td>
			<td>Date</td>
			<td>lBs</td>
		</tr>
	</thead>
	<tbody>
		{{#each exercise}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.reps}}</td>
				<td>{{this.weight}}</td>
				<td>{{this.date}}</td>
				<td>{{this.lbs}}</td>
				<td> </td>
				<td>
					<form method="post">
						<input type="hidden" name="id" value="{{this.id}}">
						<input type="submit" name="remove" value="Delete">
					</form>
				</td>
				<td>
					<form action="http://52.88.56.252:3000/update" method="get">
						<input type="hidden" name="id" value="{{this.id}}">
						<input type="submit" name="update" value="Update">
					</form>
				</td>
			</tr> 
		{{/each}}
</table>
{{/if}}

